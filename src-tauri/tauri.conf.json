{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "兰亭书签",
  "version": "0.1.0",
  "identifier": "com.lanting.bookmarks",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "兰亭书签",
        "label": "main",
        "width": 1080,
        "height": 720,
        "minWidth": 860,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
